{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Lincese nr.</th>
                        <th>Age</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for driver in drivers %}
                        <tr>
                            <td>{{ driver.id }}</td>
                            <td>{{ driver.name }}</td>
                            <td>{{ driver.license }}</td>
                            <td>{{ driver.age }}</td>
                            <td><a href="{{ path('driver.edit', {id: driver.id}) }}">Edit</a></td>
                            <td><a href="{{ path('driver.delete', {id: driver.id}) }}">Delete</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
